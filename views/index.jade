doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Fun with Kanbans
    link(rel='stylesheet', href='/css/myApp.css')
  body(ng-app='myApp' ng-controller='MyController')
    h1#topTitle Fun with Kanbans!
    #addCard
      form#addCard(action='/', method='POST')
        input(type='text', name='title', placeholder='Title')
        select(name='priority')
          option(value='Low') Low
          option(value='Meduim') Meduim
          option(value='High') High
          option(value='Blocker') Blocker
        select(name='status')
          option(value='Queue') Queue
          option(value='In Progress') In Progress
          option(value='Done') Done
        select(name='createdBy')
          option(ng-repeat='user in users' value='{{user.username}}') {{user.username}}
        select(name='assignedTo')
          option(ng-repeat='user in users' value='{{user.username}}') {{user.username}}
        button(type='submit', ng-click="Kanban.addCard(title, priority, createdBy, assignedTo);title=''; priority=''; createdBy=''; assignedTo='';") Create Card
    #kanban
      #queue
        .card queue test card {{title}}
        .card(ng-repeat='card in cards')
          p {{cards.title}}
      #inProgress
        .card inProgress test card
      #done
        .card done test card
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.js')
    script(type='text/javascript' src='/js/myapp.js')
    script(type='text/javascript' src='/js/controllers.js')
    script(type='text/javascript' src='/js/factories.js')

